    "version": "0.2.0",
    "configurations": [
        {
            "type": "by-gdb",
            "request": "launch",
            "name": "Launch(gdb)",
            "program": "${fileBasenameNoExtension}",
            "cwd": "${workspaceRoot}",
            "remote": { 
                "enabled": true,
                "address": ":2345",
                "mode": "remote",
                "execfile": "${fileBasenameNoExtension}"
            }
        }
    ]
}